<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bk"
    >
    <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="1" 
		>

	    <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="2"
			>
		</LinearLayout>

	    <LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1" 
			>
			
			<TextView
				android:id="@+id/tv_outputscreenratio_wel"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:text="@string/wel_layout"
			    android:textSize="30sp"
			    android:textColor="@color/orange_color"
			    android:paddingTop="20dip"
			    android:layout_weight="1"
			    />
			    
			<TextView
				android:id="@+id/tv_outputscreenratio_output"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/choose_outputmode"
				android:textColor="@color/balck_color"
				android:textSize="20dp"
				android:layout_weight="1"
				/>
				
			<Button
				android:id="@+id/btn_outputscreenratio_outputmode"
				android:layout_width="140dp" 
		        android:layout_height="wrap_content"
		        android:background="@drawable/button"
		        android:text="@string/output_mode_720P"
		        android:textColor="@color/balck_color"
		        android:textSize="20dp"
		        android:layout_weight="1" 
		        />
		        
			<!--<TextView
				android:id="@+id/tv_outputscreenratio_screenratio"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="@string/choose_screen_ratio"
				android:textColor="@color/balck_color"
				android:textSize="20dp"
				android:layout_weight="1"
				/>
				
			<Button
				android:id="@+id/btn_outputscreenratio_screenratio"
				android:layout_width="140dp" 
		        android:layout_height="wrap_content"
		        android:background="@drawable/button"
		        android:text="@string/screen_ratio_169"
		        android:textColor="@color/balck_color"
		        android:textSize="20dp"
		        android:layout_weight="1" 
		        />-->
		        
		</LinearLayout>

	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_height="match_parent"
		android:layout_width="match_parent" 
		android:layout_gravity="bottom"
		android:layout_weight="10"
		>
		
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_gravity="bottom" 
			android:layout_width="fill_parent" 
			android:orientation="horizontal" 
			android:layout_weight="1"
			android:gravity="bottom|center">
			
				<Button
					android:id="@+id/btn_outputscreenratio_back"
					android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:background="@drawable/buttom_button"
			        android:text="@string/back"
			        android:textColor="@color/balck_color"
			        android:textSize="20dp"
			        />	
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom" 
			android:layout_width="fill_parent" 
			android:layout_weight="1"
			android:gravity="bottom|center"
			>
				<Button
					android:id="@+id/btn_outputscreenratio_next"
					android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"
			        android:background="@drawable/buttom_button"
			        android:text="@string/next"
			        android:textColor="@color/balck_color"
			        android:textSize="20dp"
			        />	
		</LinearLayout>
	       
	</LinearLayout>

</LinearLayout>
